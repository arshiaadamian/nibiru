{
  "manifest_version": 3,
  "name": "Nibiru - BCIT Summary Assistant",
  "version": "1.0.0",
  "description": "A summarizing Chrome extension for BCIT students",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Nibiru - BCIT Summary"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; style-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net; font-src 'self' https://cdn.jsdelivr.net;"
  }
}

